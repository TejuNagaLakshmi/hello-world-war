pipeline {
    agent any 
       
        environment{
         PATH = "/opt/maven3/bin:$PATH"
         }
    stages {
        stage('gitcheckout') { 
            steps {
                git credentialsId: 'teju02', url: 'https://github.com/TejuNagaLakshmi/hello-world-war.git' 
            }
        }
        stage('Build') { 
            steps {
                sh "mvn clean package"
                sh "mv target/*.war target/hello-world-war.war"
            }
        }
        stage('Deploy') { 
            steps {
                //deploy adapters: [tomcat9(credentialsID: 'tomcat-tej', path: '', url: 'http://34.228.144.148:8080/')], contextpath: null, war: 'target/*.war'
                
        
                }
           }
        }
    }
}

    
      
      
